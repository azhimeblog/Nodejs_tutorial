<!DOCTYPE html>
<html>

<head>
    <title>
    </title>
    <script src="https://cdn.ckeditor.com/ckeditor5/23.1.0/classic/ckeditor.js"></script>


</head>

<body>
    <%-  include layout %>
        <div class="container">
            <h2 style="align-content: center;"> เพิ่มบทความ</h2>
            <%- messages() %>
                <% if(locals.errors) { %>
                    <ul>
                        <% Object.values(errors).forEach(function(error){ %>
                            <li>
                                <%= error.msg %>
                            </li>

                            <% }) %>
                    </ul>
                    <% } %>
                        <form class="" action="/blog/add" method="post">
                            <div class="form-group">
                                <label for="">ชื่อบทความ</label>
                                <input type="text" name="name" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="">รายละเอียดบทความ</label>
                                <textarea id="editor" name="description" row="8" cols="80" class="form-control"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="">ชื่อนักเขียน</label>
                                <input type="text" name="author" class="form-control">
                            </div>
                            <input type="submit" name="" value="บันทึก" class="btn btn-prim">
                        </form>
                        <a href="/blog/"> กลับหน้าบทความทั้งหมด</a>
        </div>

        <script>
            $(function() {
                    $('#message').addClass('alert success');
                })
                //CKEDITOR.replace('description');


            ClassicEditor
                .create(document.querySelector('#editor'))
                .catch(error => {
                    console.error(error);
                });
        </script>
</body>

</html>